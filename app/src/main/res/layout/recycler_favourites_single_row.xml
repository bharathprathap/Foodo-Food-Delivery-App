<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/favouritesLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txtRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Restaurant Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rupeeSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRestaurantName"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="â‚¹"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/txtCostForOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRestaurantName"
                android:layout_toRightOf="@id/rupeeSymbol"
                android:padding="8dp"
                android:text="280"
                android:textColor="#7A7777"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPerPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtRestaurantName"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/txtCostForOne"
                android:text="/person"
                android:textColor="#7A7777"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgFavourite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp"
                android:background="@color/white"
                android:clickable="true"
                android:src="@drawable/ic_favourite" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgFavourite"
                android:layout_weight="1.2"
                android:drawableLeft="@drawable/ic_star"
                android:padding="5dp"
                android:drawablePadding="2dp"
                android:text="4.5"
                android:textColor="#ffca28"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
